factorial(polar n) => polar
{
  polar acc = 1;
  mientras(n > 0)
  {
    acc = acc * n;
    n = n - 1;
  }
  vomita acc;
}

oso() => extinto
{
  escribir("Por favor, introduzca el numero al que \n desea calcularle el factorial");
  polar N = 0;
  leer (N);
  polar original = N;
  N = factorial(N);
  escribir("El factorial de "); escribir(original); escribir("es "); escribir(N);
}
